type Account {
  id: ID! @id
  createdAt: DateTime! @createdAt
  updatedAt: DateTime! @updatedAt
  email: String! @unique
  password: String!
  profile: Profile! @relation(name: "UsersProfile", link: INLINE, onDelete: CASCADE)
  role: Role!
}

type Profile {
  id: ID! @id
  createdAt: DateTime! @createdAt
  updatedAt: DateTime! @updatedAt
  firstName: String!
  lastName: String!
  fullName: String!
  scoreCards: [Scorecard!]!
  account: Account! @relation(name: "UsersProfile")
}

type Course {
  id: ID! @id
  createdAt: DateTime! @createdAt
  updatedAt: DateTime! @updatedAt
  scoreCard: Scorecard!
  courseName: String!
  courseAddress: String!
  coursePhone: String!
  long: Float!
  lat: Float!
  numberOfHoles: Int!
  holes: [Hole!]!
}

type Hole {
  id: ID! @id
  createdAt: DateTime! @createdAt
  updatedAt: DateTime! @updatedAt
  course: Course! @relation(link: INLINE)
  holeNum: Int!
  handicap: Int!
  par: Int!
  distanceToFlag: Float!
  blueTee: Int
  whiteTee: Int
  redTee: Int
}

type Scorecard {
  id: ID! @id
  createdAt: DateTime! @createdAt
  updatedAt: DateTime! @updatedAt
  profile: Profile! @relation(link: INLINE)
  golfers: [Golfer!]!
  course: Course! @relation(link: INLINE)
  strokes: [Stroke]!
  isActive: Boolean
}

type Stroke {
  id: ID! @id
  createdAt: DateTime! @createdAt
  updatedAt: DateTime! @updatedAt
  golferId: ID
  profileId: ID
  hole: Hole! @relation(link: INLINE)
  scoreCard: Scorecard @relation(link: INLINE)
  strokes: Int!
}

type Golfer {
  id: ID! @id
  accountId: ID
  createdAt: DateTime! @createdAt
  updatedAt: DateTime! @updatedAt
  name: String!
  scoreCard: Scorecard @relation(link: INLINE)
}

enum Role {
  USER
  ADMIN
}
